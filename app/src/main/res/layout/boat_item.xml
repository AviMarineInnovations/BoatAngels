<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:descendantFocusability="blocksDescendants"
  android:orientation="horizontal">

  <LinearLayout
    android:id="@+id/ll1"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_toStartOf="@+id/ll2"
    android:orientation="vertical"
    android:layout_alignParentLeft="true"
    android:layout_toLeftOf="@+id/ll2"
    android:padding="5dp">

      <TextView
        android:id="@+id/boat_name_tv"
        style="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Name"/>

      <TextView
        android:id="@+id/club_name_tv"
        style="@style/TextAppearance.AppCompat.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Club"/>

    </LinearLayout>
  <LinearLayout
    android:id="@+id/ll2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:orientation="horizontal"
    android:layout_alignParentRight="true">

    <ImageView
      android:id="@+id/status_iv"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:contentDescription="@string/boat_status_content_description"
      app:srcCompat="@drawable/ic_traffic_green_24px"/>
  </LinearLayout>
</RelativeLayout>

