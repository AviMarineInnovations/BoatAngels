<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:descendantFocusability="blocksDescendants"
  android:orientation="horizontal">

  <LinearLayout
    android:id="@+id/ll0"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"

    android:orientation="vertical">
    <de.hdodenhof.circleimageview.CircleImageView
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:id="@+id/boat_iv"
      android:layout_width="80dp"
      android:layout_height="80dp"
      android:padding="5dp"
      app:civ_border_width="2dp"
      app:civ_border_color="#7bbde6"/>
  </LinearLayout>
  <LinearLayout
    android:id="@+id/ll1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toLeftOf="@+id/ll2"
    android:layout_toStartOf="@+id/ll2"
    android:layout_toRightOf="@+id/ll0"
    android:layout_toEndOf="@+id/ll0"
    android:orientation="vertical">

    <TextView
      android:id="@+id/boat_name_tv"
      style="@style/TextAppearance.AppCompat.Medium"
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/list_item_text_color"
      tools:text="Name"/>
    <TextView
      android:id="@+id/club_name_tv"
      style="@style/TextAppearance.AppCompat.Small"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/list_item_text_color"
      tools:text="Club"/>
    <TextView
      android:id="@+id/sum_offer_points"
      style="@style/TextAppearance.AppCompat.Small"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/list_item_text_color"
      tools:text="Offer"/>


  </LinearLayout>
  <LinearLayout
    android:id="@+id/ll2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:orientation="horizontal"
    >

    <ImageView
      android:id="@+id/status_iv"
      android:layout_width="40dp"
      android:layout_height="90dp"
      android:contentDescription="@string/boat_status_content_description"
      app:srcCompat="@drawable/ic_traffic_green_24px"/>
  </LinearLayout>
</RelativeLayout>

